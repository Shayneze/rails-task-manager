<div class="container mt-3">
  <div class="my-3 d-flex justify-content-between align-items-center">
    <h2><%= @task.title %></h2>
    <%= link_to "Back to list", tasks_path, :class => "btn btn-primary"%>
  </div>

  <p class="p-3 mb-2 bg-light text-dark"><%= @task.details %></p>
  <% if @task.completed == false %>
    <p><i class="fa-regular fa-square"></i> Task is not completeted yet</p>
  <% else %>
    <p><i class="fa-solid fa-square-check"></i> Task is completeted</p>
  <% end %>
  <div class="my-3">
  <i class="fa-solid fa-trash-can"></i>
  <%= link_to "Delete",
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
  </div>

  <%= link_to "Edit this task", edit_path, :class => "btn btn-secondary"%>

</div>
